<div class="container" style="padding-top: 20px;">
  <form method="post" action="/items/add" enctype="multipart/form-data">
    <fieldset>
      <legend>Feature Image</legend>
      <div class="mb-3">
        <input class="form-control" id="featureImage" name="featureImage" type="file" />
      </div>
    </fieldset>
    <br />  
    <fieldset>
      <legend>Post Content</legend>
      <div class="mb-3">
        <label for="title" class="form-label">Item Name:</label>
        <input class="form-control" id="title" name="title" type="text" />
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Price:</label>
        <input class="form-control" id="price" name="price" type="text" />
      </div>
      <div class="mb-3">
        <label for="body" class="form-label">Description:</label>
        <textarea class="form-control" id="body" name="body" rows="5"></textarea>
      </div>
      <div class="row">
        <div class="col-md-6 mb-3">
          <label for="category" class="form-label">Category:</label>
          {{#if categories}}
          <select class="form-control" name="category" id="category">
            <option value="">Select Category</option>
            {{#each categories}}
            <option value="{{id}}">{{category}}</option>
            {{/each}}
          </select>
          {{else}}
          <div>No Categories</div>
          {{/if}}
        </div>
        <div class="col-md-6 mb-3">
          <label class="form-label">Visibility:</label>
          <div class="form-check">
            <input type="checkbox" name="published" id="published" class="form-check-input" />
            <label for="published" class="form-check-label">Published</label>
          </div>
        </div>
      </div>
    </fieldset>
    <hr />
    <button type="submit" class="btn btn-primary">Add Post</button>
  </form>
</div>
