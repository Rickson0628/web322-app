<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h2>Items</h2>
      <a href="/Items/add" class="btn btn-success pull-right">Add Item</a> <!-- Add Item button -->
      <hr />
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Item ID</th>
              <th>Title</th>
              <th>Item Date</th>
              <th>Price</th>
              <th>Category</th>
              <th>Published</th>
              <th></th> <!-- New header for the 'Remove' button column -->
            </tr>
          </thead>
          <tbody>
            {{#each items}}
              <tr>
                <td>{{id}}</td>
                <td>{{title}}</td>
                <td>{{postDate}}</td>
                <td>${{price}}</td>
                <td>
                  <a href="/items?category={{category}}">{{category}}</a>
                </td>
                <td>{{#if published}}Yes{{else}}No{{/if}}</td>
                <td>
                  <a href="/item/delete/{{id}}" class="btn btn-danger">Remove</a> <!-- Remove button -->
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  {{#unless items}}
    <div class="col-md-12 text-center">
      <strong>{{message}}</strong>
    </div>
  {{/unless}}
</div>
